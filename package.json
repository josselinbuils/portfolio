{
  "name": "portfolio-react",
  "version": "0.1.0",
  "homepage": "https://josselinbuils.me",
  "private": true,
  "scripts": {
    "add:staged": "exec-staged 'git add' '.*\\.(js|tsx?|scss)$'",
    "analyze": "yarn build:client && source-map-explorer 'dist/client/static/js/*.js'",
    "build": "yarn build:server && yarn build:client",
    "build:client": "react-app-rewired build && react-snap && rimraf dist/client && cpx \"build/**/*\" dist/client && rimraf build",
    "build:server": "tsc -p ./server/tsconfig.json && rimraf dist/server && cpx \"tmp/**/*\" dist/server && rimraf tmp",
    "build:server:dev": "tsc -p server/tsconfig.dev.json",
    "csscomb:staged": "exec-staged 'csscomb -v' '.*\\.scss$'",
    "dev:client": "react-app-rewired start",
    "dev:server": "concurrently --kill-others 'yarn build:server:dev -w' 'nodemon dist/server/server.js'",
    "lint": "yarn lint:client && yarn lint:server",
    "lint:client": "tslint -p tsconfig.json --fix",
    "lint:server": "tslint -p server/tsconfig.json --fix",
    "lint:staged": "exec-staged 'npm run lint:client' '^src.*\\.tsx?$' 'npm run lint:server' '^server.*\\.ts$'",
    "prettier:staged": "exec-staged 'prettier --write' '.*\\.(js|tsx?|scss)$'",
    "start": "node dist/server/server.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged && npm run prettier:staged && npm run csscomb:staged && npm run add:staged"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-brands-svg-icons": "^5.13.0",
    "@fortawesome/free-regular-svg-icons": "^5.13.0",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.9",
    "@josselinbuils/utils": "^0.1.2",
    "@types/classnames": "^2.2.10",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^13.9.1",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/request-promise-native": "^1.0.17",
    "@types/snoowrap": "^1.19.0",
    "@types/source-map-support": "^0.5.1",
    "ansi_up": "^4.0.4",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "cpx": "^1.5.0",
    "dayjs": "^1.8.23",
    "dicom-parser": "^1.8.5",
    "express": "^4.17.1",
    "js-untar": "^2.0.0",
    "lodash.clonedeep": "^4.5.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-app-rewired": "^2.1.5",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8",
    "rimraf": "^3.0.2",
    "serve-static": "^1.14.1",
    "snoowrap": "^1.21.0",
    "source-map-support": "^0.5.16",
    "typescript": "~3.8.3"
  },
  "devDependencies": {
    "@josselinbuils/exec-staged": "^0.1.1",
    "@josselinbuils/tslint": "^5.1.0",
    "concurrently": "^5.1.0",
    "csscomb": "^4.3.0",
    "husky": "^3.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "react-snap": "^1.23.0",
    "source-map-explorer": "^2.4.1",
    "tslint": "^6.1.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/app/$1"
    }
  },
  "nodemonConfig": {
    "ext": "js",
    "watch": [
      "dist/server"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "reactSnap": {
    "inlineCss": true
  }
}
